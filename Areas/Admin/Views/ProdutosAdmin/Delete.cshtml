@model LojaOnline.Models.Produto
@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Excluir Produto</h2>

<h4>Tem certeza que deseja excluir este produto?</h4>
<hr />

<div class="form-group">
    <strong>Nome:</strong> @Model.Nome
</div>

<div class="form-group">
    <strong>Preço:</strong> R$ @Model.Preco.ToString("F2")
</div>

<div class="form-group">
    <strong>Descrição:</strong> @Model.Descricao
</div>

@if (!string.IsNullOrEmpty(Model.UrlImagem))
{
    <div class="form-group">
        <strong>Imagem:</strong><br />
        <img src="@Model.UrlImagem" alt="Imagem do produto" style="max-height:100px;" />
    </div>
}

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
