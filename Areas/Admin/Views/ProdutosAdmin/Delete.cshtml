@model LojaOnline.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2 class="text-danger">Excluir Produto</h2>
<hr />

<div class="alert alert-warning">
    <strong>Tem certeza que deseja excluir o produto abaixo?</strong>
</div>

<div class="card mb-4" style="max-width: 500px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="@Model.UrlImagem" class="card-img" alt="@Model.Nome" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Nome</h5>
                <p class="card-text">@Model.Descricao</p>
                <p class="card-text text-muted">Preço: R$ @Model.Preco.ToString("F2")</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
